<section class="create-event">
    <div class="container create-custom  d-flex flex-column justify-content-center align-items-center">
        <h2>Edit Event</h2>

        <form action="/edit-event/{{event.id}}" method="POST">
            <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control form-size" id="title" name="title" placeholder="write your title here" value="{{event.title}}">
            </div>
            <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control form-size" id="description" name="description" placeholder="write your description here" >{{event.description}}</textarea>
            </div>
            <div class="form-group">
            <label for="title">Address</label>
            <input type="text" class="form-control form-size" id="address" name="address" placeholder="address" value="{{event.address}}">
            </div>
            <div class="form-group">
            <label for="title">Date</label>
            <input type="date" class="form-control form-size" id="date" name="date" placeholder="" value="{{event.date}}">
            </div>
            <div class="form-group">
            <label for="type">Choose your game type</label>
            <select id="type" name="type" class="form-control form-size-sel">
                <option value="boardgame">Board Game</option>
                <option value="cardgame">Card Game</option>
                <option value="tabletoprpg">TableTop RPG</option>
            </select>
            </div>
            <div class="d-flex justify-content-start">
            <div class="form-group">
                <label for="typegameboard" id="typegb">Choose your game type</label>
                <select id="typegameboard" name="typegameboard" class="form-control form-size-sel1">
                </select>
            </div>
            <div class="form-group">
                <label for="title">N of Players</label>
                <input type="number" class="form-control form-size-num" id="numberofplayers" name="numberplayers" placeholder="0" value="{{event.numberplayers}}">
            </div>
            </div>
            <button type="submit" class="btn btn-primary btn-sign btn-create-event">Edit</button>
        </form>
    </div>
</section>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/js/edit-events.js"></script>